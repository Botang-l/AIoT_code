# https://editorconfig.org/

# top-most EditorConfig file
root = true

[**]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[**.{html,css}]
indent_size = 2

[**.json]
indent_size = 2
insert_final_newline = false

[**.{min,min.js,min.js.map,min.css,min.css.map}]
indent_style = ignore
insert_final_newline = ignore
